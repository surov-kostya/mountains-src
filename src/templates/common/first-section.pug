section.section.first-section
    header.first-section__header.header
        ul.header__socials.socials
            each item in ['vk', 'github', 'in']
                li.socials__item
                    a.socials__link(href="#")
                        svg.socials__img                            
                            use(xlink:href='./assets/icons/svg/symbols.svg#' + item)

        .header__hamburger.hamburger
            button.hamburger__button(type='button')
                label.hamburger__label
                    input.hamburger__input(type="checkbox").visually-hidden
                    each position in ['top', 'center', 'bottom']
                        .hamburger__block(class='hamburger__block_' + position)
    .first-section__title
        svg.first-section__title-img
            use(xlink:href='./assets/icons/svg/symbols.svg#portfolio_header')
    .first-section__person-card.person-card
        .person-card__avatar
        .person-card__name Суров Константин
        .person-card__text Личный сайт веб-разработчика
    .first-section__arrow
        a.first-section__arrow-link(href='#')
            svg.first-section__arrow-img
                use(xlink:href="./assets/icons/svg/symbols.svg#arrow_down")
    .first-section__angles
        .first-section__angle-block.first-section__angle-block_left
        .first-section__angle-block.first-section__angle-block_right
        